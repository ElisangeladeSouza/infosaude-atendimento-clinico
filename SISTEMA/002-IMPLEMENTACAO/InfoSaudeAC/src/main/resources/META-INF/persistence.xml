<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="InfoSaudePU" transaction-type="JTA">
    <jta-data-source>jdbc/infosaude</jta-data-source>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Administrador</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Consulta</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Enfermeiro</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Exame</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.FichaAtendimento</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Medico</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Odontologo</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Paciente</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Pessoa</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Procedimento</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Recepcionista</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.RequisicaoExame</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Sintoma</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.TecnicoEnfermagem</class>
    <class>br.edu.ifpb.monteiro.ads.infosaude.atendimento.modelo.Triagem</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <!--Cria as tabelas de pais, cidades e estados, caso não existam e as populam com os dados relacionados para o Brasil.-->
      <!--<property name="javax.persistence.sql-load-script-source" value="META-INF/sql/CidadesEstadosBrasil.sql"/>-->
    </properties>
  </persistence-unit>
  
  
  <!--Configuração para o ambiente de testes com o HSQLDB-->
  <persistence-unit name="InfoSaudePU_Testes" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:infosaude"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.logging.level" value="FINE"/>
    </properties>
  </persistence-unit>
</persistence>
